<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BeamApp.ChatDetail"
             Title="Detail" x:Name="cnt">
    <StackLayout Spacing="20" Padding="50" VerticalOptions="Center" >
        <Label x:Name="lblName" Text=""></Label>
        <Label x:Name="lblTime" Text="" FontSize="Medium" ></Label>



        <StackLayout x:Name="stklyt">
                <WebView x:Name="wb" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">

                </WebView>
                <Label x:Name="lblchat" Text="Chat" FontSize="Medium" >

                </Label>


                <Label x:Name="lblChatMessage" Text= "{Binding rclText}" FontSize="Medium" ></Label>
                <Entry Placeholder="Enter Chat" x:Name="chat"></Entry>

                <Button Text="Sent" TextColor="Black"  Clicked="OnSendChat"></Button>

            </StackLayout>


    </StackLayout>
</ContentPage>