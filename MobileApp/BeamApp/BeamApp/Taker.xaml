<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BeamApp.Taker">
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="50" VerticalOptions="Center" Orientation="Horizontal">
            <Label Text="Take a dcoument"  HorizontalOptions="Center" VerticalOptions="Center"></Label>
            <Switch x:Name="document" HorizontalOptions="Center" VerticalOptions="Center" ></Switch>
            <StackLayout HorizontalOptions="EndAndExpand"></StackLayout>
            <Label Text="Take a package"  HorizontalOptions="Center" VerticalOptions="Center"></Label>
            <Switch x:Name="package" HorizontalOptions="Center" VerticalOptions="Center" ></Switch>
            <StackLayout HorizontalOptions="EndAndExpand"></StackLayout>
            <Label Text="Carpool"  HorizontalOptions="Center" VerticalOptions="Center"></Label>
            <Switch x:Name="carpool" HorizontalOptions="Center" VerticalOptions="Center" ></Switch>
            <StackLayout HorizontalOptions="EndAndExpand"></StackLayout>
            <Button Text="Next" HorizontalOptions="Center"></Button>
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>